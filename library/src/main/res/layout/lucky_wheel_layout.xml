<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <rubikstudio.library.PielView
        android:id="@+id/pieView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cursorView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <rubikstudio.library.WheelSliceView
        android:id="@+id/wheel_node_1"
        android:layout_width="wrap_content"
        android:layout_height="900dp"
        android:visibility="gone"
        app:layout_constraintCircle="@id/center_point"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="60dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/center_point"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="false"
        android:visibility="gone"
        android:background="@drawable/roulette_circle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/realtimeBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/pieView"
        app:layout_constraintEnd_toEndOf="@+id/pieView"
        app:layout_constraintStart_toStartOf="@+id/pieView"
        app:layout_constraintTop_toTopOf="@+id/pieView"
        app:realtimeBlurRadius="5dp"
        app:realtimeOverlayColor="#03FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>